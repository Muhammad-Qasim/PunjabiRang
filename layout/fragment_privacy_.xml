<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Privacy_Fragment"
    android:background="@drawable/privacybackground"
    >

    <ImageView
        android:id="@+id/logo_img_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/app_logo"/>

    <TextView
        android:layout_below="@+id/logo_img_view"
        android:id="@+id/logo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PUNJABI RANG"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lobster_regular"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/cp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginTop="200dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/op_tv"
        android:layout_marginTop="50dp"
        android:layout_marginStart="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Old Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/cp_tv"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="10dp"
        android:layout_marginStart="41dp"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:hint="Please Enter Old Password"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        app:met_floatingLabelTextSize="2dp"
        app:met_textColor="@color/white"
        app:met_textColorHint="@color/white"
        android:paddingStart="10dp"
        android:id="@+id/old_password_fr"
        android:background="@drawable/round_rectangle"
        android:layout_below="@+id/op_tv"/>

    <Button
        android:id="@+id/next"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:text="I'M DONE       -->"
        android:background="@drawable/round_cornor_btn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/old_password_fr"
        android:textColor="@color/white"

        />


    <TextView
        android:id="@+id/np_tv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:text="New Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/next"
        android:visibility="gone"

        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/new_password_fr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/white"
        app:met_textColorHint="@color/white"
        android:hint="Please New Password"
        android:inputType="textPassword"
        app:met_floatingLabel="normal"
        android:layout_below="@+id/np_tv"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/cnp_tv"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Confirm New Password"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/new_password_fr"
        android:visibility="gone"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        app:met_textColorHint="@color/white"
        android:inputType="textPassword"
        android:id="@+id/confirm_password_fr"
        app:met_floatingLabel="normal"
        android:layout_below="@+id/cnp_tv"
        android:visibility="gone"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginStart="150dp"
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/white"
        android:background="@drawable/round_cornor_btn"
        android:layout_below="@+id/confirm_password_fr"
        android:visibility="gone"/>


</RelativeLayout>